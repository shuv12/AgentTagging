<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/agentpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/agentpic" />

    <TextView
        android:id="@+id/agentname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:gravity="center"
        android:text="@string/agentname"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/agentnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:gravity="center"
        android:text="@string/agentnum" />

    <Button
        android:id="@+id/viewagentprofile"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonheight"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@color/green_back"
        android:elevation="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/viewprofile"
        android:textColor="@android:color/white" />


</LinearLayout>