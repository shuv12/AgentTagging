<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:background="@color/listingback"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="app.com.example.android.agenttagging.StartMain"
        >


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_back">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/menu"
                    android:id="@+id/drawermenu"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/propertylist"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/notification" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="@dimen/image_margin"
                android:id="@+id/quicksearch"
                android:paddingBottom="@dimen/image_margin"
                android:background="@color/textmain">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/down"
                    android:layout_marginRight="@dimen/marginlow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quicksearch"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/openedquicksearchlayout"
                android:background="@color/textmain"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin">


                <android.support.v7.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:id="@+id/search_bar"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:clickable="true"
                    android:queryHint="@string/searchHint"
                    android:background="@android:color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/left_right_margin"
                    android:layout_marginBottom="@dimen/left_right_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FOR SALE"
                            android:paddingLeft="@dimen/image_margin"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FOR RENT"
                            android:paddingLeft="@dimen/image_margin"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/card_margin"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">
                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/hbd"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:background="@drawable/clickablebox"
                                />
                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HBD"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/card_margin">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">
                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/condo"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:background="@drawable/clickablebox"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condo"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">
                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/landed"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:background="@drawable/clickablebox"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Landed"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">
                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/banksale"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:background="@drawable/clickablebox"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Sale"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:id="@+id/quickcancel"
                        android:textColor="@android:color/white"
                        android:background="@color/cancelbuttoncolor"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/card_margin"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="SEARCH"
                        android:background="@color/green_back"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/card_margin"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycleframe"
            android:background="@color/listingback">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleviewpost" />

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg"
        app:menu="@menu/drawer_items"
        app:itemTextColor="@android:color/white"
        app:headerLayout="@layout/logindrawerheader"/>

</android.support.v4.widget.DrawerLayout>