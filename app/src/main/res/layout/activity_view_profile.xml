<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:background="@color/listingback"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="app.com.example.android.agenttagging.StartMain"
        >


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green_back">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:src="@drawable/menu"
                        android:id="@+id/drawermenu"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/agentpro"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:id="@+id/titlename"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:id="@+id/notificationbtn"
                        android:src="@drawable/notification" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/marginlow"
                    android:paddingBottom="@dimen/marginlow"
                    android:paddingRight="@dimen/card_margin"
                    android:paddingLeft="@dimen/card_margin"
                    >
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/agentpic"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agentprofilename"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:paddingTop="@dimen/card_margin"
                            android:id="@+id/agentprofilename"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="@dimen/card_margin"
                                android:text="@string/agentnumber"/>
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:text="@string/messageme"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:id="@+id/messageme"
                                android:layout_gravity="right"
                                android:background="@color/green_back"
                                android:textColor="@android:color/white"/>
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:text="@string/updateprofile"
                                android:background="@color/green_back"
                                android:textColor="@android:color/white"
                                android:textAllCaps="true"
                                android:textSize="13sp"
                                android:id="@+id/updateprofile"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted"
                    android:layerType="software"/>


                <android.support.design.widget.TabLayout
                    android:id="@+id/sliding_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed"
                    app:tabMaxWidth="0dp"
                    app:tabGravity="fill"/>
            </LinearLayout>


        </android.support.design.widget.AppBarLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg"
        app:menu="@menu/drawer_items"
        app:itemTextColor="@android:color/white"
        app:headerLayout="@layout/logindrawerheader">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/createlisting"
            android:textColor="@android:color/white"
            android:text="@string/createlisting"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/green_back"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>