<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listingback"
    tools:context="app.com.example.android.agenttagging.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green_back">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Lists"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/notification" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/image_margin"
        android:id="@+id/quicksearch"
        android:paddingBottom="@dimen/image_margin"
        android:background="@color/textmain">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/down"
            android:layout_marginRight="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quicksearch"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quicksearch_placeholder"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleframe">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycleviewpost" />

    </FrameLayout>

</LinearLayout>
