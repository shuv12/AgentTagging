<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_uploading_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.example.android.agenttagging.DisplayUploadingPhoto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_arrow_back_white_36dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/step3"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notificationbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/notification" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/editbox"
        android:orientation="vertical"
        android:paddingLeft="@dimen/card_margin"
        android:paddingRight="@dimen/card_margin"
        android:paddingTop="@dimen/card_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/addimagebody"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/marginlow"
            android:layout_marginTop="@dimen/marginlow"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_property_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:src="@drawable/add" />
        </org.apmem.tools.layouts.FlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/marginlow"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@color/textmain"
                android:text="@string/preview"
                android:textAllCaps="true"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/donepost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="@dimen/marginlow"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@color/green_back"
                android:text="@string/post"
                android:textAllCaps="true"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
