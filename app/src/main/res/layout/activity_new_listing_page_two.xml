<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.example.android.agenttagging.NewListingPageTwo">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_arrow_back_white_36dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/step2"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notificationbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/notification" />
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/listingback"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:text="@string/ud"
                        android:textColor="@color/textmain"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/furnished"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/furnished"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/floor"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/noofbathroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/noofbathroom"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/splf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/splf"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fnf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/fnf"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/outins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/outins"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:singleLine="true"
                        android:text="@string/facilities"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:text="@string/pd"
                        android:textColor="@color/textmain"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tenure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:padding="@dimen/text_margin"
                        android:text="@string/tenure"
                        android:textColor="@color/textmain"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/topyr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:hint="@string/topyr"
                        android:inputType="number"
                        android:padding="@dimen/text_margin"
                        android:textColorHint="@color/textmain"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:hint="@string/tou"
                        android:inputType="number"
                        android:padding="@dimen/text_margin"
                        android:textColorHint="@color/textmain"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:hint="@string/tof"
                        android:inputType="number"
                        android:padding="@dimen/text_margin"
                        android:textColorHint="@color/textmain"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/videourl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:background="@drawable/edittextboxview"
                        android:hint="@string/videourl"
                        android:padding="@dimen/text_margin"
                        android:textColorHint="@color/textmain"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/nexttothree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="@color/green_back"
                android:gravity="bottom|center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
