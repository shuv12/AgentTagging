<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listingback">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.com.example.android.agenttagging.StartMain">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_back"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/drawermenu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/propertylist"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/notificationbtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/notification" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/quicksearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/textmain"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/image_margin"
                android:paddingTop="@dimen/image_margin">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="@dimen/marginlow"
                    android:src="@drawable/down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quicksearch"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/openedquicksearchlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textmain"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:visibility="gone">


                <android.support.v7.widget.SearchView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/searchviewbg"
                    android:clickable="true"
                    android:queryHint="@string/searchHint" />


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/purpose"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin">

                    <RadioButton
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="?android:attr/listChoiceIndicatorMultiple"
                        android:text="@string/fors"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="?android:attr/listChoiceIndicatorMultiple"
                        android:text="@string/forr"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </RadioGroup>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">

                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="@dimen/box_dimen"
                                android:layout_height="@dimen/box_dimen"
                                android:background="@drawable/clickablebox"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:id="@+id/HBD"
                                android:src="@drawable/hbd" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:text="HBD"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">

                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="@dimen/box_dimen"
                                android:layout_height="@dimen/box_dimen"
                                android:background="@drawable/clickablebox"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:id="@+id/Condo"
                                android:src="@drawable/condo" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:text="Condo"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">

                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="@dimen/box_dimen"
                                android:layout_height="@dimen/box_dimen"
                                android:background="@drawable/clickablebox"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:id="@+id/landed"
                                android:src="@drawable/landed" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:text="Landed"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solidbox"
                            android:orientation="vertical">

                            <app.com.example.android.agenttagging.CheckableImageView
                                android:layout_width="@dimen/box_dimen"
                                android:layout_height="@dimen/box_dimen"
                                android:background="@drawable/clickablebox"
                                android:clickable="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:id="@+id/banksale"
                                android:src="@drawable/banksale" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:text="Bank Sale"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/quickcancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_weight="1"
                        android:background="@color/cancelbuttoncolor"
                        android:elevation="@dimen/card_margin"
                        android:outlineProvider="bounds"
                        android:text="CANCEL"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/search_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@color/green_back"
                        android:elevation="@dimen/card_margin"
                        android:outlineProvider="bounds"
                        android:text="SEARCH"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>


        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleviewpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg"
        app:headerLayout="@layout/logindrawerheader"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/drawer_items">

        <Button
            android:id="@+id/createlisting"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/green_back"
            android:text="@string/createlisting"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </android.support.design.widget.NavigationView>
    <!--app:menu="@menu/drawer_items"
    app:itemTextColor="@android:color/white"
    app:headerLayout="@layout/logindrawerheader"-->

</android.support.v4.widget.DrawerLayout>